{
	"mother": {
		"root": {
			"type": "fork",
			"options": [
			{
				"next": "checkBag",
				"condition": "spoken == true"
			},
			{
				"next": "setter",
				"condition": "true"
			}]
		},
		"setter":{
			"type": "setter",
			"next": "checkHour",
			"set": {
				"var": "spoken",
				"value": true
			}
		},
		"checkBag": {
			"type": "fork",
			"options": [{
				"next": "bye",
				"condition": "varObject('state', 'BagPicked') == true"
			},
			{
				"next": "getBag",
				"condition": "varObject('state', 'BagPicked') == false"
			}]
		},
		"bye": {
			"type": "dialog",
			"fragments": [{
				"tag": "Mom",
				"character": "Mother",
				"msn": "Looks like you have everything."
			}, 
			{
				"tag": "Mom",
				"character": "Mother",
				"msn": "<$ if(varObject('global', 'HourNonStatic')<8, 'Go now or you will be late.', 'Go now, you are late.') $>"
			}]
		},
		"getBag": {
			"type": "dialog",
			"fragments": [{
				"tag": "Mom",
				"character": "Mother",
				"msn": "You forget your backpack."
			}, 
			{
				"tag": "Mom",
				"character": "Mother",
				"msn": "It's in your room, pick it up and leave now."
			}]
		},
		"checkHour": {
			"type": "fork",
			"options": [{
				"next": "motherSoon",
				"condition": "varObject('global', 'HourNonStatic') < 8"
			},
			{
				"next": "motherLate",
				"condition": "varObject('global', 'HourNonStatic') >= 8"
			}]
		},
		"motherSoon": {
			"type": "dialog",
			"fragments": [{
				"tag": "Mom",
				"character": "Mother",
				"msn": "Looks like you're ready to go."
			}, 
			{
				"tag": "Mom",
				"character": "Mother",
				"msn": "Do you have everything? Remember to take the backpack."
			},
			{
				"tag": "Mom",
				"character": "Mother",
				"msn": "Behave and make a lot of friends."
			}]
		},		
		"motherLate": {
			"type": "dialog",
			"fragments": [{
				"tag": "Mom",
				"character": "Mother",
				"msn": "Have you seen what time is it?"
			}, 
			{
				"tag": "Mom",
				"character": "Mother",
				"msn": "Your first day in the new school and you're already late."
			},
			{
				"tag": "Mom",
				"character": "Mother",
				"msn": "C'mon, take everything you need and leave NOW!"
			}]
		}
	},
	"exitDoor": {
		"root": {
			"type": "fork",
			"options": [{
				"next": "changeHourSoon",
				"condition": "varObject('state', 'BagPicked') == true && varObject('global', 'HourNonStatic') < 8"
			},{
				"next": "changeHourLate",
				"condition": "varObject('global', 'HourNonStatic') >= 8 && varObject('state', 'BagPicked') == true"
			},
			{
				"next": "dialogNode",
				"condition": "varObject('state', 'BagPicked') == false"
			}]
		},
		"changeHourLate": {
			"type": "event",
			"next": "exitNode",
			"event":{
				"name": "change variable",
				"var": "hour",
				"value": "8:40"
			}
		},
		"changeHourSoon": {
			"type": "event",
			"next": "exitNode",
			"event":{
				"name": "change variable",
				"var": "hour",
				"value": "8:20"
			}
		},
		"exitNode": {
			"type": "event",
			"event": {
				"name": "change scene",
				"var": "scene",
				"value": 4
			}
		},
		"dialogNode": {
			"type": "dialog",
			"fragments": [{
				"tag": "You",
				"msn": "I forgot the backpack. I'll better go to my room to take it before i leave."
			}]
		}
	},
	"bedroomDoor" : {
		"root": {
			"type": "event",
			"event": {
				"name": "move camera",
				"key": "bedroom"
			}
		}
	}
}