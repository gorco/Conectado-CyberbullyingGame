{
	"board":{
		"root": {
			"type": "dialog",
			"fragments": [{
				"tag": "You",
				"msn": "Looks like someone has taken yesterday's picture."
			}]
		}
	},
	"class":{
		"root": {
				"type": "fork",
				"options": [{
					"next": "minutes",
					"condition": "varObject('global', 'HourNonStatic') >= 8"
				}]
		},
		"minutes": {
				"type": "fork",
				"options": [{
					"next": "node1",
					"condition": "varObject('global', 'MinuteNonStatic') > 30"
				}]
		},
		"node1": {
			"type": "dialog",
			"next": "node2",
			"fragments": [{
				"tag": "Teacher",
				"character": "Teacher",
				"msn": "<$ varObject('global', 'UserNameNonStatic') $> you're late."
			},{
				"tag": "Teacher",
				"character": "Teacher",
				"msn": "Please, have a seat and let's continue the class"
			}]
		},
		"node2": {
			"type": "fork",
			"options": [{
				"next": "endDay",
				"condition": "varObject('global', 'SharedPassQuestNonStatic') == 1"
			},
			{
				"next": "break",
				"condition": "true"
			}]
		},
		"break": {
			"type": "event",
			"next": "breakHour",
			"event": {
				"name": "black",
				"synchronous": true,
				"var": "text",
				"value": "The bell is ringing, it's break time..."
			}
		},
		"breakHour": {
			"type": "event",
			"next": "nextScene",
			"event":{
				"name": "change variable",
				"var": "hour",
				"value": "11:05",
			}
		},
		"nextScene": {
			"type": "event",
			"event": {
				"name": "change scene",
				"var": "scene",
				"value": 20
			}
		},
		"endDay": {
			"type": "event",
			"next": "breakHour",
			"event": {
				"name": "black",
				"synchronous": true,
				"var": "text",
				"value": "It seems like classes are lasting longer and longer... Luckly it's time to go home."
			}
		},
		"endDayHour": {
			"type": "event",
			"next": "nextScene",
			"event":{
				"name": "change variable",
				"var": "hour",
				"value": "14:05",
			}
		}
	},
	"table":{
		"root": {
			"type": "dialog",
			"next": "options",
			"fragments": [{
				"tag": "You",
				"msn": "This place is available. May I sit here?"
			}]
		},
		"options": {
			"type": "options",
			"questionId": "sitDownClass",
			"options": [{
				"next": "node2",
				"msn": "Yes"
			},
			{
				"msn": "No"
			}]
		},
		"node2": {
			"type": "dialog",
			"next": "nodeFork",
			"fragments": [{
				"tag": "",
				"msn": "(Taps in the back, the teacher is here)"
			}]
		},
		"nodeFork": {
			"type": "fork",
			"options": [{
				"next": "endDay",
				"condition": "varObject('global', 'SharedPassQuestNonStatic') == 1"
			},
			{
				"next": "break",
				"condition": "true"
			}]
		},
		"break": {
			"type": "event",
			"next": "breakHour",
			"event": {
				"name": "black",
				"synchronous": true,
				"var": "text",
				"value": "The bell indicates it's break time..."
			}
		},
		"breakHour": {
			"type": "event",
			"next": "nextScene",
			"event":{
				"name": "change variable",
				"var": "hour",
				"value": "11:05",
			}
		},
		"endDay": {
			"type": "event",
			"next": "changeHour",
			"event": {
				"name": "black",
				"synchronous": true,
				"var": "text",
				"value": "It seems like classes are lasting longer and longer... Luckly it's time to go home."
			}
		},
		"changeHour": {
			"type": "event",
			"next": "nextScene",
			"event":{
				"name": "change variable",
				"var": "hour",
				"value": "14:05",
			}
		},
		"nextScene": {
			"type": "event",
			"event": {
				"name": "change scene",
				"var": "scene",
				"value": 20
			}
		}
	},
}