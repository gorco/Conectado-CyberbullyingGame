{
	"init":{
		"root": {
			"type": "fork",
			"options": [{
				"next": "node0",
				"condition": "varObject('global', 'RepeatedNonStatic') == true"
			}]
		},
		"node0": {
			"type": "dialog",
			"fragments": [{
				"tag": "You",
				"msn": "Again, another repeated day...am i still dreaming?"
			},
			{
				"tag": "You",
				"msn": "Who's that voice coming from that portal? "
			},
			{
				"tag": "You",
				"msn": "Why is the day repeated both times i crossed that portal?"
			}]
		}
	},
	"bed":{
		"root": {
			"type": "dialog",
			"fragments": [{
				"tag": "You",
				"msn": "Another day, i have to go, hope it finishes fast."
			}]
		}		
	},
	"wardrobeInside1":{
		"root": {
			"type": "dialog",
			"fragments": [{
				"tag": "You",
				"msn": "There is nothing useful."
			}]
		}		
	},
	"wardrobeInside2":{
		"root": {
			"type": "dialog",
			"fragments": [{
				"tag": "You",
				"msn": "Perhaps i could organize this now instead of going to school... Mom would get mad."
			}]
		}		
	},
	"bag":{
		"root": {
			"type": "dialog",
			"next": "node2",
			"fragments": [{
				"tag": "You",
				"msn": "Gotta go... "
			}]
		},
		"node2": {
			"type": "event",
			"event": {
				"name": "pick",
				"var": "BagPicked",
				"value": true
			}
		},
	},
	"computer":{
		"root": {
			"type": "dialog",
			"next": "node1",
			"fragments": [{
				"tag": "You",
				"msn": "If i turn it on now, i will be late for sure."
			},
			{
				"tag": "You",
				"msn": "Always the same, better to wait for the afternoon."
			},
			{
				"tag": "PC",
				"msn": "Do you want to turn on the computer?"
			}]
		},		
		"node1": {
			"type": "options",
			"questionId": "turnOnPC",
			"options": [{
				"next": "node1a",
				"msn": "Yes"
			},
			{
				"next": "node1b",
				"msn": "No"
			}]
		},
		"node1a": {
			"type": "event",
			"next": "moveCamera",
			"event":{
				"name": "computerON"
			}
		}, 
		"moveCamera": {
			"type": "event",
			"next": "changeHour",
			"event":{
				"name": "move camera",
				"key": "computer"
			}
		},
		"changeHour": {
			"type": "event",
			"event":{
				"name": "change variable",
				"var": "hour",
				"value": "8:10",
			}
		},
		"node1b": {
			"type": "dialog",
			"fragments": [{
				"tag": "You",
				"msn": "I'll better leave now."
			}]
		}		
	},
	"plug":{
		"root": {
			"type": "dialog",
			"next": "node1",
			"fragments": [{
				"tag": "You",
				"msn": "Do i leave the mobile charging?"
			}]
		},		
		"node1": {
			"type": "options",
			"questionId": "plugInMobile",
			"options": [{
				"next": "node1a",
				"msn": "Yes"
			},
			{
				"next": "node1b",
				"msn": "No"
			}]
		},
		"node1a": {
			"type": "event",
			"event": {
				"name": "change state",
				"var": "ChargingMobile",
				"value": true,
				"state": 0
			}
		}, 
		"node1b": {
			"type": "event",
			"event": {
				"name": "change state",
				"var": "ChargingMobile",
				"value": false,
				"state": 1
			}
		}		
	},
	"livingroomDoor" : {
		"root": {
			"type": "event",
			"event": {
				"name": "move camera",
				"key": "livingroom"
			}
		}
	}
}